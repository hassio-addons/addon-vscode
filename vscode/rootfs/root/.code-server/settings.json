{
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/deps/**": true
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/deps/**": true
    },
    "editor.selectionClipboard": false,
    "terminal.integrated.copyOnSelection": true,
    "settings": {
		"editor.tabSize": 2,
		"editor.renderWhitespace": "boundary",
		"yaml.customTags": [
			"!secret",
			"!yaml",
			"!include",
			"!include_dir_list",
			"!include_dir_named",
			"!include_dir_merge_list",
			"!include_dir_merge_named"
		]
	}
}
